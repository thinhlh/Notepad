<Window x:Class="Notepad.GotoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notepad"
        mc:Ignorable="d"
        Title="Goto" Height="100" Width="300" WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Go to: " VerticalAlignment="Center"/>
        <TextBox x:Name="LineTextBox" VerticalAlignment="Center" Grid.Column="1" FontSize="14" KeyDown="LineTextBox_KeyDown"/>
        <Button x:Name="Go" Grid.Column="2" Content="Go" Click="Go_Click" VerticalAlignment="Center"/>
    </Grid>
</Window>
